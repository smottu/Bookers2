<div class="container ox-5 px-sm-0">
 <div class="row">
  <div class="col-md-3" >
   <%= render 'users/side', user: @user, books: @books, book: @book %>
 </div>

<div class="col-md-8 offset-md-1">
<h1>Books</h1>
<table>
 <thead>
  <tr>
  <th>Title</th>
  <th>Body</th>
  </tr>
 </thead>
<tbody>
 <% @books.each do |book| %>
  <tr>
   <%= image_tag book.user.get_profile_image(100,100) %>
   <%= link_to book.title, book_path(book.id) %>
   <%= book.body %>
  </tr>
  <% end %>
  </tbody>
</table>
</div>
</div>
</div>