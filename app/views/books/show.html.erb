<div class="container ox-5 px-sm-0">
 <div class="row">
  <div class="col-md-3" >
    <%= render 'users/side', user: @user, books: @books, book: @book %>
   </div>
<div class="col-md-8 offset-md-1">

<h2>Book detail</h2>

<%= @book.title %>
<%= @book.body %>
  <td><%= link_to 'Show', book_path(@book.id) %></td>
  <td><%= link_to 'Edit', edit_book_path(@book.id) %></td>
  <td><%= link_to 'Destroy', book_path(@book.id),method: :delete, "data-confirm" => "Can I really delete this?" %></td>
</div>
</div>