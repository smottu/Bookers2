<h1>New Book</h1>
<% if @book.errors.any? %>
 <%= @book.errors.count %>errors occurred
  <ul>
  　<%@book.errors.full_message.each do |message| %>
  　　<li><%=message %></li>
　　<% end %>
   </ul>
<% end %>


<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>