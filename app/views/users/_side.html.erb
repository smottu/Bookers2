<p id="notice"></p>
 <h2>User info</h2>
 <%= image_tag user.get_profile_image(100,100) %>
 <table class="table">
  <tbody>
   <tr>
    <th>name</th>
    <th><%= user.name %></th>
   </tr>
   <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
   </tr>
  </tbody>
 </table>

 <div class="row">
  <% if user == current_user %>
  <button type="button" class="btn btn-outline-secondary btn-outline-secondary btn-block">
   <%= link_to edit_user_path(@user) do %>
   <i class="fas fa-user-cog" style="color:#999999"></i>
   <% end %>
  </button>
  <% else %>
  <button type="button" class="btn btn-outline-secondary btn-outline-secondary btn-block">
   <%= link_to edit_user_path(@user) do %>
   <i class="fas fa-user-cog" style="color:#999999"></i>
   <% end %>
  </button>
  <% end %>
 </div>
 
<h2 class="mt-3">New book</h2>
<% if book.errors.any? %>
 <%= book.errors.count %>errors occurred
  <ul>
   <% book.errors.full_messages.each do |message| %>
    <li><%=message %></li>
   <% end %>
  </ul>
<% end %>


<%= form_with model: book do |f| %>
<div class="form-group">
 <label for="book_title">Title<br>
<%= f.text_field :title %></label>
</div>
<div class="form-group">
 <label for="book_opinion">Opinion<br>
 <%= f.text_area :body %></label>
  
</div>
<div class="form-group">
 <%= f.submit 'Create Book', class: "btn btn-sm btn-success" %>
</div>
</form>
<% end %>


