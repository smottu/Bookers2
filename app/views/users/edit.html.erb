<h2>User info</h2>
<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
  <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></p>
  <p><label for="inputImage">Image</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>
  <p><label for="imputintroduction">Introduction</label></p>
  <%= f.text_field :introduction %>
  <p><%= f.submit "Update User" %></p>
<% end %>