<div class="container ox-5 px-sm-0">
 <div class="row">
  <div class="col-md-3" >
   <%= render 'side', user: @user, book: @book %>
 </div>

<div class="col-md-8 offset-md-1">
<h1>Users</h1>

<table class="table table-hover table-inverse">
 <thead>
  <tr>
  <th>Image</th>
  <th>name</th>
  <th colspan="3"></th>
  </tr>
 </thead>
<tbody>
 <tr>
  <td><% @users.each do |user| %></td>
  <td><%= image_tag user.get_profile_image(100,100) %></td>
  <td><%= user.name %></td>
  <td><%= link_to 'show', user_path(user.id) %></td>
 </tr>
  <% end %>
  </tbody>
</table>
</div>
</div>
</div>